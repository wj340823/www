package com.sucsoft.gzhbyjwz.controller;

import com.sucsoft.gzhbyjwz.service.DataDealService;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import io.swagger.annotations.ApiParam;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import java.io.FileNotFoundException;
import java.util.Map;

@RestController
@RequestMapping("/dataDeal")
@Api(value="dataDeal",description="数据处理")
public class DataDealController {

    @Autowired
    private DataDealService dataDealService;
    
    @RequestMapping(value="/getData",method= RequestMethod.GET)
    @ApiOperation(httpMethod="GET",value="获取模拟数据",notes="获取模拟数据")
    public Map getData(@ApiParam("企业id")@RequestParam("companyId") String companyId) throws Exception {
       return dataDealService.getData(companyId);
    }

    @RequestMapping(value="/getLHTX",method= RequestMethod.GET)
    @ApiOperation(httpMethod="GET",value="获取理化特性",notes="获取理化特性")
    public Map getProduct(@ApiParam("化学产品名")@RequestParam("name") String name) throws Exception {
        return dataDealService.getRiskSubstance(name);
    }

}
