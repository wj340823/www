package com.sucsoft.gzhbyjwz.service.emergencyEvent;

import com.sucsoft.gzhbyjwz.util.HttpUtil;
import net.sf.json.JSONObject;
import org.apache.commons.collections.map.HashedMap;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.stereotype.Service;

import java.util.Map;


@Service
public class WaterEventService {
    @Value("${WaterEvent.json.posturl}")
    private String posturl;

    public Object postPoint(String point_lon,String point_lat,String river_name){
        Map<String,String> map = new HashedMap();
        StringBuffer sb = new StringBuffer();
        sb.append(point_lon).append("_").append(point_lat).append("_").append(river_name);
        return HttpUtil.sendPost(posturl,sb.toString());
    }


}
