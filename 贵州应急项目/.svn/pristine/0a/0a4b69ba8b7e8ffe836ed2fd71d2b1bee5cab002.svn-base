<div style="background-color: #000;padding: 10px" >
    <div  style="color: #ffcc01;line-height: 40px;font-size: 16px">
        {{{'1':'大气稳定度','2':'地面粗糙度'}[fileType]}}
        <span class="fr" ng-click="close()"><i class="iconfont icon-guanbi"></i></span>
    </div>
    <table class="clearfix" ng-show="fileType==1">
        <tr>
            <th rowspan="2">
                地面风速m/s
            </th>
            <th colspan="3">
                白天日照
            </th>
            <th colspan="2">
                夜间条件
            </th>
        </tr>
        <tr>
            <th>强</th>
            <th>中</th>
            <th>弱</th>
            <th>阴天且云层薄，或低空云量</th>
            <th>天空云量为 3/8</th>
        </tr>
        <tr ng-repeat="(index,item) in tb1">
            <td>{{item.fs}}</td>
            <td>{{item.l}}</td>
            <td>{{item.m}}</td>
            <td>{{item.s}}</td>
            <td>{{item.lowCloud}}</td>
            <td>{{item.highCloud}}</td>
        </tr>

    </table>
    <table class="clearfix" ng-show="fileType==2">
        <tr>
            <th >
                地面类型
            </th>
            <th colspan="3">
                粗糙度Z0,m
            </th>
        </tr>
        <tr ng-repeat="(index,item) in tb2">
            <td>{{item.type}}</td>
            <td>{{item.value}}</td>
        </tr>

    </table>
</div>

