<div class="emergencyPlan emergencyDetail" ng-controller="emerPlanCtrl">
    <section class="table-content">
        <div class="clearfix">
            <div class="tb-title"> 新增预案</div>
            <div class="fr">
                <button class="searchBtn" onclick="history.go(-1)">
                    <i class="iconfont icon-fanhui"></i>
                    返回
                </button>
            </div>
        </div>
        <div class="item-title">基本信息</div>
        <div class="item-content">
            <ul class="detail">
                <li>
                    <span>企业名称：</span><span ng-model="emergancy.company.companyName">{{ emergancy.company.companyName }}</span>
                </li>
                <li>
                    <span>备案时间：</span><span class="qie">
                        <input cgs-date-picker date-fmt='yyyy-MM-dd' ng-show="page.type!='edit'" ng-model="emergancy.company.recordtime" style="margin-right: 20px;">
                        <input cgs-date-picker date-fmt='yyyy-MM-dd' ng-show="page.type=='edit'" ng-model="page.unlist[page.index].recordtime" style="margin-right: 20px;">
                    </span>
                    <span>预案管理经办人：</span>
                    <input ng-show="page.type!='edit'" ng-model="emergancy.company.underSigned" type="text" style="margin-right: 20px;">
                    <input ng-show="page.type=='edit'" ng-model="page.unlist[page.index].underSigned" type="text" style="margin-right: 20px;">
                    <span>联系方式：</span>
                    <input ng-show="page.type!='edit'" ng-model="emergancy.company.preplanTel" type="text">
                    <input ng-show="page.type=='edit'" ng-model="page.unlist[page.index].preplanTel" type="text">
                </li>
                <li>
                    <span>风险级别：</span>
                    <input type="radio" ng-model="emergancy.company.level" value="1" class="regular-radio" id="radioD"/>
                    <label for="radioD" class="hander"></label>
                    <span style="margin-right: 10px">一般风险源 </span>
                    <input type="radio" ng-model="emergancy.company.level" value="2" class="regular-radio" id="radioE"/>
                    <label for="radioE" class="hander"></label>
                    <span style="margin-right: 10px">较大风险源</span>
                    <input type="radio" ng-model="emergancy.company.level" value="3" class="regular-radio" id="radioF"/>
                    <label for="radioF" class="hander"></label>
                    <span style="margin-right: 10px">重大风险源</span>
                </li>
<!--                <li>-->
<!--                    <span>编制年份：</span>-->
<!--                    <span class="qie">-->
<!--                        <input cgs-date-picker date-fmt='yyyy' ng-show="page.type!='edit'" ng-model="emergancy.company.documentYear" style="margin-right: 50px;">-->
<!--                        <input cgs-date-picker date-fmt='yyyy' ng-show="page.type=='edit'" ng-model="page.unlist[page.index].documentYear"  style="margin-right: 50px;">-->
<!--                    </span>-->
<!--                </li>-->
                <li  ng-show="page.type=='edit' && page.unlist[page.index].qxshsj != ''&& page.unlist[page.index].qxshsj != null">
                    <span>区县审核人：</span><span ng-model="page.unlist[page.index].qxshr" style="display: inline-block; width: 200px;">{{ page.unlist[page.index].qxshr }}</span>
                    <span style="margin-left:50px;">区县审核时间：</span><span ng-model="page.unlist[page.index].qxshsj">{{ page.unlist[page.index].qxshsj }}</span>
                </li>
                <li ng-show="page.type=='edit' && page.unlist[page.index].qxshsj != ''&& page.unlist[page.index].qxshsj != null">
                    <span>区县审核意见：</span><span ng-model="page.unlist[page.index].qxshyj">{{ page.unlist[page.index].qxshyj }}</span>
                </li>
                <li ng-show="page.type=='edit' && page.unlist[page.index].szshsj != ''&& page.unlist[page.index].szshsj != null">
                    <span>市州审核人：</span><span ng-model="page.unlist[page.index].szshr" style="display: inline-block; width: 200px;">{{ page.unlist[page.index].szshr }}</span>
                    <span style="margin-left:50px;">市州审核时间：</span><span ng-model="page.unlist[page.index].szshsj">{{ page.unlist[page.index].szshsj }}</span>
                </li>
                <li ng-show="page.type=='edit' && page.unlist[page.index].szshsj != ''&& page.unlist[page.index].szshsj != null">
                    <span>市州审核意见：</span><span ng-model="page.unlist[page.index].szshyj">{{ page.unlist[page.index].szshyj }}</span>
                </li>
                <li ng-show="page.type=='edit' && page.unlist[page.index].stshsj != ''&& page.unlist[page.index].stshsj != null">
                    <span>省厅审核人：</span><span ng-model="page.unlist[page.index].stshr" style="display: inline-block; width: 200px;">{{ page.unlist[page.index].stshr }}</span>
                    <span style="margin-left:50px;">省厅审核时间：</span><span ng-model="page.unlist[page.index].stshsj">{{ page.unlist[page.index].stshsj }}</span>
                </li>
                <li ng-show="page.type=='edit' && page.unlist[page.index].stshsj != ''&& page.unlist[page.index].stshsj != null">
                    <span>省厅审核意见：</span><span ng-model="page.unlist[page.index].stshyj">{{ page.unlist[page.index].stshyj }}</span>
                </li>
                <br/>
                <span id="ha" ng-click="saveEmergency()">保存</span>
            </ul>
        </div>
        <div class="item-title" style="margin-bottom:10px;">预案附件
            <button ng-show="page.type!='edit'" title="提示：请先保存基本信息再上传预案附件" ng-disabled="emergancy.company.id ==''" class="searchBtn" style="float: right;margin-right: 10px;margin-top: 4px"  ui-sref="enterpriseHead.emergencyFile({id:emergancy.company.id})">
                <i class="iconfont icon-tianjia" style="font-size: 14px"></i>添加
            </button>
            <button ng-show="page.type=='edit'" class="searchBtn" style="float: right;margin-right: 10px;margin-top: 4px"  ui-sref="enterpriseHead.emergencyFile({id:page.unlist[page.index].id})">
                <i class="iconfont icon-tianjia" style="font-size: 14px"></i>添加
            </button>
        </div>
        <table class="detailTable">
            <thead>
            <tr>
                <th>附件名称</th>
                <th>附件类型</th>
                <th>文件大小</th>
                <th>上传日期</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="detail in file.list.dataList">
                <td> {{ detail.URL }} </td>
                <td> {{ detail.TYPE==1?'应急综合预案': detail.TYPE==2?'应急专项预案': detail.TYPE==3?'应急现场处置预案': detail.TYPE==4?'应急预案备案表': detail.TYPE==5?'应急预案编制说明': detail.TYPE==6?'环境风险评估报告': detail.TYPE==7?'环境应急资源调查报告': detail.TYPE==8?'环境应急预案评审意见': detail.TYPE==9?'其他':''}} </td>
                <td> {{ input(detail.SIZE) }} </td>
                <td> {{ detail.TIME | date: 'yyyy-MM-dd' }} </td>
                <td>
                    <a ng-href="{{detail.URLS}}"><span class="oper">下载</span></a>
                    <span class="delete" ng-click="deleteTask(detail.ID)">删除</span>
                </td>
            </tr>
            </tbody>
        </table>
        <uib-pagination ng-change="getFileDetail()" total-items="page.totalCount" items-per-page="page.pageSize" ng-model="page.currentPage" class="pagination" boundary-link-numbers="true" direction-links="false" rotate="false" max-size="3" first-text="首页" last-text="末页">
        </uib-pagination>
        <div class="clearfix"></div>
        <div id="haha" style="position: absolute; top: 0; right: 0; bottom: 0; left: 0; background-color: rgba(0, 0, 0, .8); display: none; z-index:100;">
        </div>
        <div class="tasks-alert">
            <div class="alert-title">操作提示</div>
            <div class="alert-content">{{textContent}}</div>
            <ul class="alert-button">
                <li ng-click="yesAlert()" ng-if="textContent=='确定删除吗?删除记录不可恢复！'">确定</li>
                <li ng-click="noAlert(textContent)">{{textContent=='确定删除吗?删除记录不可恢复！'?'取消':'关闭'}}</li>
            </ul>
        </div>
        <div class="task-alert" style="z-index: 9999">
            <div class="alert-title">操作提示</div>
            <div class="alert-content">保存成功！</div>
            <ul class="alert-button">
                <li ng-click="sureAlert()">关闭</li>
            </ul>
        </div>
        <div class="tasks-alerts" style="z-index: 9999">
            <div class="alert-title">操作提示</div>
            <div class="alert-content">删除成功！</div>
            <ul class="alert-button">
                <li ng-click="sureAlert()">关闭</li>
            </ul>
        </div>
    </section>

</div>