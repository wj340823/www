<div ng-controller="groupCtrl" style="width:100%;position:relative">
    <!--    群组管理-->
    <div class="content1" ng-class="{false: 'moveLeft'}[group.table.isActive]">
        <div class="user_toolTip">
            <div class="user_toolTip_left">
                <select class="form-control select_tool" ng-options="option.key as option.name for option in group.table.searchList" ng-model="group.table.searchName"></select>
                <input type="text" class="form-control input_tool" ng-model="group.searchValue" placeholder="搜索..." />
                <button type="button" class="btn btn-default btn-primary" ng-click="group.search()">搜索</button>
            </div>
            <div class="user_toolTip_right">
                <button type="button" class="btn btn-default btn-primary"  ng-click="group.addGroup('新建群组')">新建群组</button>
                <button type="button" class="btn btn-default" ng-click="group.refresh()">刷新</button>
            </div>
        </div>
        <div class="user_table">
            <table class="table table-hover table-bordered">
                <thead>
                    <tr>
                        <th ng-repeat="thead in group.table.headList">{{thead}}</th>
                        <th style="width:200px">操作</th>
                    </tr>
                </thead>
                <tbody>
                    <tr ng-repeat="content in group.table.content">
                        <td>{{content.displayName}}</td>
                        <td><span class="role-parent" ng-repeat="roles in content.roles">{{roles.name}}</span></td>
                        <td>{{content.des}}</td>
                        <td>{{content.createtimestamp| date : 'yyyy-MM-dd'}}</td>
                        <td style="width:200px" authox-unable-resource="authox | manage">
							<a class="table_a" style="width:100%" ui-sref="system.user.select({key:content.uid})">查看</a></td>
                        <td style="width:200px"  authox-resource="authox | manage">
                        	<a class="table_a border_right" ui-sref="system.group.select({key:content.groupTag})">管理</a><a class="table_a" ng-click="group.delgroup(content)">删除</a></td>
                    </tr>
                </tbody>
            </table>
            <div class="page" style="margin-top: 3px;margin-right: 15px;">
                <div class="page_left">共有{{group.pages.totalCount}}条，每页显示{{group.pages.pageSize}}条</div>
                <uib-pagination ng-change="group.pageChanged(group.pages.currentPageNo)" total-items="group.pages.totalCount" ng-model="group.pages.currentPageNo" items-per-page="group.pages.pageSize" boundary-links="true" direction-links="true" rotate="false" max-size="10" class="pagination-sm" previous-text="&lsaquo;" next-text="&rsaquo;" first-text="&laquo;" last-text="&raquo;">
                </uib-pagination>
            </div>
        </div>
