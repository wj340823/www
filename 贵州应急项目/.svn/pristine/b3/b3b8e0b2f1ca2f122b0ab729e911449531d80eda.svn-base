package com.sucsoft.gzhbyjwz.service.goods;

import com.sucsoft.gzhbyjwz.bean.param.Param;
import com.sucsoft.gzhbyjwz.service.common.BasicQueryService;
import org.apache.commons.lang.StringUtils;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import java.util.HashMap;
import java.util.Map;

@Service
public class WeixianService {

    @Autowired
    private BasicQueryService queryService;

    public Object listweixian(Param param, Integer pageNo, Integer pageSize) throws Exception {
        Map params = param.toParam();
        return queryService.queryForPage("listweixian",params,Map.class,pageNo,pageSize);
    }

    public Object listweixianType(String key,Integer pageNo, Integer pageSize) throws Exception {
        Map<String,Object> param = new HashMap<>();
        if(StringUtils.isNotBlank(key)){
            param.put("key","%"+key+"%");
        }
        return queryService.queryForPage("listweixianType",param,Map.class,pageNo,pageSize);
    }
}
