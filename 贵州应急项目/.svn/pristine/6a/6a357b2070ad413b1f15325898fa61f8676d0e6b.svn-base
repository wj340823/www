<div class="emergencyPlan" ng-controller="emerStatisticsCtrl">
  <div class="tab-task">
    <div class="tab-nav">
      <button class="tab-button" ui-sref="emergencyPlan.emergencyManage" ui-sref-active="active">
        预案管理
      </button>
      <button class="tab-button" ui-sref="emergencyPlan.emergencyAlarm" ui-sref-active="active">
        备案预警
      </button>
      <button class="tab-button" ui-sref="emergencyPlan.emergencyStatistics" ui-sref-active="active">
        预案统计
      </button>
    </div>
  </div>
  <section class="table-content">
    <section class="content">
      <div>
        统计日期：<span>{{ time | date: 'yyyy-MM-dd' }}</span>
        <a style="float: right;margin-right: 10px; margin-top: -15px;" type="submit" class="searchBtn" ng-href="preplan/exportExcel">
          <i class="iconfont iccon-daochu"></i> 导出EXCEL
        </a>
      </div>
    </section>
    <table class="detailTable" style="margin-bottom: 30px">
      <thead>
        <tr>
          <th rowspan="2">序号</th>
          <th rowspan="2">行政区域</th>
          <th rowspan="2">应备案企业数（个）</th>
          <th rowspan="2">已备案企业数（个）</th>
          <th rowspan="2">未备案（个）</th>
          <th rowspan="2">备案超期（个）</th>
          <th rowspan="2">即将到期（个）</th>
          <th colspan="3" style="text-align: center">风险评估等级（个）</th>
        </tr>
        <tr>
            <th>重大</th>
            <th>较大</th>
            <th>一般</th>
        </tr>
        </thead>
        <tbody id="sss">
          <tr ng-repeat="item in items" class="file">
            <td>{{ $index + 1 }}</td>
            <td>{{ item.xzqyName }}</td>
            <td>{{ item.csum }}</td>
            <td>{{ item.recorded }}</td>
            <td>{{ item.notOnRecord }}</td>
            <td>{{ item.expired }}</td>
            <td>{{ item.aboutToExpire }}</td>
            <td>{{ item.zd }}</td>
            <td>{{ item.jd }}</td>
            <td>{{ item.yb }}</td>
          </tr>
        </tbody>
    </table>
    <section id="container" class="charts" cgs-echarts options="totalChart" style="height: 300px"></section>
    <div class="item-title">预案类型上传企业数</div>
    <div style="width: 100%;height: 400px" cgs-echarts options="fjOption"></div>
  </section>

</div>
