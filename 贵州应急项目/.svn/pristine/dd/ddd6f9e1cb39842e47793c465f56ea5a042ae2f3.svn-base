package com.sucsoft.gzhbyjwz.controller;

import com.sucsoft.gzhbyjwz.bean.param.WeixianParam;
import com.sucsoft.gzhbyjwz.service.goods.WeixianService;
import io.swagger.annotations.Api;
import io.swagger.annotations.ApiOperation;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.http.MediaType;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import java.util.List;

@RestController
@RequestMapping("/weixian")
@Api(value="危险品模块",description="危险品模块")
public class WeixianController {
    @Autowired
    private WeixianService weixianService;



    @RequestMapping(value="/listweixian",method= RequestMethod.GET)
    @ApiOperation(httpMethod="GET",value="查询危险品列表",notes="查询危险品列表",
            response=List.class,produces= MediaType.TEXT_PLAIN_VALUE)
    public Object listweixian(WeixianParam param,Integer pageNo,Integer pageSize) throws Exception{

        return weixianService.listweixian(param,pageNo,pageSize);
    }

    @RequestMapping(value="/listweixianType",method= RequestMethod.GET)
    @ApiOperation(httpMethod="GET",value="查询危险品类别列表",notes="查询危险品类别列表",
            response=List.class,produces= MediaType.TEXT_PLAIN_VALUE)
    public Object listweixianType(@RequestParam(value = "key",required = false) String key, Integer pageNo, Integer pageSize) throws Exception{

        return weixianService.listweixianType(key,pageNo,pageSize);
    }


}
