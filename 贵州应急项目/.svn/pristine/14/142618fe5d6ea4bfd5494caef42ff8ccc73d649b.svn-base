package com.sucsoft.gzhbyjwz.config;


import org.springframework.boot.web.servlet.MultipartConfigFactory;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.util.ClassUtils;
import springfox.documentation.builders.ApiInfoBuilder;
import springfox.documentation.builders.PathSelectors;
import springfox.documentation.builders.RequestHandlerSelectors;
import springfox.documentation.service.ApiInfo;
import springfox.documentation.spi.DocumentationType;
import springfox.documentation.spring.web.plugins.Docket;
import springfox.documentation.swagger2.annotations.EnableSwagger2;

import javax.servlet.MultipartConfigElement;

@Configuration
@EnableSwagger2
public class MySwaggerConfig {

//    /**
//     * 文件上传临时路径
//     */
//    @Bean
//    MultipartConfigElement multipartConfigElement() {
//        MultipartConfigFactory factory = new MultipartConfigFactory();
//        factory.setLocation(ClassUtils.getDefaultClassLoader().getResource("").getPath()+"/download");
//        return factory.createMultipartConfig();
//    }

    @Bean
    public Docket createRestApi() {
        return new Docket(DocumentationType.SWAGGER_2)
                .apiInfo(apiInfo())
                //选择那些接口暴露给Swagger实现
                .select()
                .apis(RequestHandlerSelectors.basePackage("com.sucsoft.gzhbyjwz.controller"))
                //.apis(RequestHandlerSelectors.basePackage("com.cgs.dc.starter.controllers"))
                .paths(PathSelectors.any())
                .build();
    }

    /**
     * 创建api的基本信息
     * @return
     */
    private ApiInfo apiInfo() {
        return new ApiInfoBuilder()
                .title("贵州应急物资风险源管理系统")
                .description("贵州应急物资风险源管理系统接口文档")
                .termsOfServiceUrl("无")
                .version("1.0")
                .build();
    }

}
