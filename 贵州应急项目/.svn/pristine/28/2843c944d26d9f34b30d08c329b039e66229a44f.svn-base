    <style>
        .text-padding {
            padding: 8px 20px;
        }

        form .ng-invalid {
            background-color: lightpink;
        }

    </style>

    <!-- 发送验证码 -->
    <script type="text/javascript">
        function ajax() {
            var xmlHttpReg = null;
            if (window.ActiveXObject) {
                xmlHttpReg = new ActiveXObject("Microsoft.XMLHTTP");
            } else if (window.XMLHttpRequest) {
                xmlHttpReg = new XMLHttpRequest();
            }
            if (xmlHttpReg != null) {
                xmlHttpReg.open("get", "rest/authox/checkCode?size=120*40", true);
                xmlHttpReg.send(null);
                xmlHttpReg.onreadystatechange = doResult;
            }

            function doResult() {
                if (xmlHttpReg.readyState == 4) {
                    if (xmlHttpReg.status == 200) {
                        //var i = document.getElementById("checkImg");
                        //i.src = "data:image/gif;base64," + xmlHttpReg.responseText;
                        /* i.attr("src", "data:image/gif;base64," + xmlHttpReg.responseText); */
                        /* console.log(xmlHttpReg.responseText) */
                    }
                }
            }
        }
        ajax();
        var cc;

        function check(event) {
            document.getElementById("check_feed").style.display = "none";
            document.getElementById("close_feed").style.display = "none";
            document.getElementById("ok_id").disabled = true;
            document.getElementById("check_parent").className = '';
            if (cc) clearTimeout(cc);
            cc = setTimeout(function() {
                var xmlHttpReg = null;
                if (window.ActiveXObject) {
                    xmlHttpReg = new ActiveXObject("Microsoft.XMLHTTP");
                } else if (window.XMLHttpRequest) {
                    xmlHttpReg = new XMLHttpRequest();
                }
                if (xmlHttpReg != null) {
                    var tagetValue;
                    if (event.srcElement) {
                        tagetValue = event.srcElement.value
                    } else {
                        tagetValue = event.target.value
                    }
                    xmlHttpReg.open("get", "rest/authox/checkCodeValidate?value=" + tagetValue, true);
                    xmlHttpReg.send(null);
                    xmlHttpReg.onreadystatechange = doResult;
                }

                function doResult() {
                    if (xmlHttpReg.readyState == 4) {
                        if (xmlHttpReg.status == 200) {
                            var i = document.getElementById("ok_id");
                            if (xmlHttpReg.responseText === 'true') {
                                i.removeAttribute('disabled');
                                document.getElementById("check_parent").className = 'has-success';
                                document.getElementById("check_feed").style.display = "block";
                            } else if (xmlHttpReg.responseText === 'false') {
                                document.getElementById("check_parent").className = 'has-error';
                                document.getElementById("close_feed").style.display = "block";
                            }
                            /* i.attr("src", "data:image/gif;base64," + xmlHttpReg.responseText); */
                            /* console.log(xmlHttpReg.responseText) */
                        }
                    }
                }
            }, 800)
        }

    </script>
</head>

<body>
    <div class="login_body">
        <div class="login_title"> </div>
        <div class="login_main">
            <div class="login_main_right">
                <div class="login_main_list">
                    <form th:action="@{/login}" method="post" role="form">
                        <ul style="list-style-type: none;padding: 0">
                            <li>
                                <div class="leftInput leftUser"></div>
                                <input class="form-control" name="username" type="text" id="username" placeholder="用户名" required="required" />
                            </li>
                            <li>
                                <div class="leftInput leftPsw"></div>
                                <input class="form-control" name="password" type="password" id="password" placeholder="密码" required="required" />
                            </li>
                            <!-- <li style="position: relative;padding-bottom:15px;" id="check_parent">
		            	<input class="form-control" name="checkCode" type="text" oninput="check(event)" id="checkCode" placeholder="验证码" required="required"/>
		            	<img type="image" id="checkImg"/>
		            	<div class="fa fa-check-circle checkFeedback" style="display:none;color:#3c763d" id="check_feed"></div>
		            	<div class="fa fa-times-circle checkFeedback" style="display:none;color:#a94442" id="close_feed"></div>
		            </li> -->
                            <li style="padding-bottom:15px;text-align: left;color:#666">
                                <input type="checkbox" id="rememberme" name="remember-me" />记住密码
                            </li>
                            <li>
                                <input type="submit" value="登录" class="ok_btn" id="ok_id" style="border: 0px;" />
                            </li>
                        </ul>
                    </form>
                    <div style="margin-top: -40px;">
                        <span th:if="${param.error}" class="errorMsg"><strong>登录账号或密码错误</strong></span></div>
                </div>
                <!-- 		      <div class="login_foot"><span>版本编号1.0.0</span></div> -->
            </div>
        </div>
        <div class="bottom_title" style="height: 37px">
            <div><span style="color: #999;margin-left: 33px">版本号：1.0</span></div>
        </div>
    </div>

</body>

</html>
