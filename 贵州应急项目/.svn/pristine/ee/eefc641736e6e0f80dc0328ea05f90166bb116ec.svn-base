package com.sucsoft.gzhbyjwz.task;

import org.apache.log4j.Logger;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.scheduling.annotation.Scheduled;
import org.springframework.stereotype.Component;

import com.sucsoft.gzhbyjwz.service.goods.GoodsFrequencyService;

@Component
public class TaskJob {

	@Autowired
	GoodsFrequencyService goodsFrequencyService;
	
	private Logger logger = Logger.getLogger(this.getClass());  
    
	//把搜索频度持久化到数据库
    @Scheduled(cron="0 0/13 * * * ?") //每分钟执行一次  
    public void statusCheck() {      
        logger.info("每13分钟执行一次。开始……");  
        goodsFrequencyService.persistentFrequency();
        logger.info("每13分钟执行一次。结束。");  
    }
}
