package com.sucsoft.gzhbyjwz.controller;

import com.sucsoft.gzhbyjwz.service.TestGoodsService;
import com.sucsoft.gzhbyjwz.service.risksource.RiskImportService;
import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestMethod;
import org.springframework.web.bind.annotation.RestController;
import springfox.documentation.annotations.ApiIgnore;

import javax.servlet.http.HttpServletResponse;


@RestController
@RequestMapping("/test")
public class TestController {

    @Autowired
    private TestGoodsService goodsService;

    @Autowired
    private RiskImportService importService;

    //测试时间参数
    @RequestMapping(value="/time",method= RequestMethod.GET)
    public Object time() throws Exception {
        return goodsService.test();
    }

    //测试时间参数
    @RequestMapping(value="/cleanTelephone",method= RequestMethod.GET)
    public Object cleanTelephone() throws Exception {
        return goodsService.cleanemergencyorganization();
    }

    //测试时间参数
    @RequestMapping(value="/downWord",method= RequestMethod.GET)
    public void downWord(HttpServletResponse response) throws Exception {
        goodsService.downWord(response);
    }

    /**
     * 把fromid企业的EmergencyCrew表数据拷贝到toid企业
     * @param fromId
     * @param toId
     * @return
     * @throws Exception
     */
    @RequestMapping(value="/copyDatafromCrew",method= RequestMethod.GET)
    public Object copyDatafromCrew(String fromId,String toId) throws Exception {
        return importService.copyDatafromCrew(fromId,toId);
    }
}
