package com.sucsoft.gzhbyjwz.util;

/**
 * gsp角度换算工具
 * @author W
 */
public class AngleConversion {
	/**
	 * gsp角度换算方法
	 * @param i	输入的角度
	 * @return 
	 */
	public static String angleConversion(Integer i){
		String result ="";
		if(i == 0)
			result = "正北";
		else if(i == 45)
			result = "东北";
		else if(i == 90)
			result = "正东";
		else if(i == 135)
			result = "东南";
		else if(i == 180)
			result = "正南";
		else if(i == 225)
			result = "西南";
		else if(i ==270)
			result = "正西";
		else if(i == 315)
			result = "西北";
		else if((i>0 && i<45) ||(i>45 && i<90))
			result = "北偏东" + i + "度";
		else if((i>90 && i<135) ||(i>135 && i<180))
			result = "东偏南" + (i-90) + "度";
		else if((i>180 && i<225) ||(i>225 && i<270))
			result = "南偏西" + (i-180) + "度";
		else if((i>270 && i<315) ||(i>315 && i<360))
			result = "西偏北" + (i-270) + "度";
		return result;
	}
}
