<div  ng-controller="yilanbiao">
    <div class="clearfix">
        <div class="tb-title"> 环境污染事故源-新增</div>
        <div class="fr">
            <button class="searchBtn" onclick="history.go(-1)">
                <i class="iconfont icon-fanhui"></i>
                返回
            </button>
        </div>
    </div>
    <div class="item-content" style="background-color: rgba(0,0,0,.7)">
        <div>
            <span class="check-result1">事故源：</span>
            <input class="text-info-small" ng-show="items.type!='edit'" ng-model="ylb.td3.accidentSource" >
            <input class="text-info-small" ng-show="items.type=='edit'" ng-model="ylb.accidents[items.index].accidentSource" >
            <br><br>
        </div>
        <br>
        <div>
            <span class="check-result1">危险性类别：</span>
            <input class="text-info-small" ng-show="items.type!='edit'" ng-model="ylb.td3.level" >
            <input class="text-info-small" ng-show="items.type=='edit'" ng-model="ylb.accidents[items.index].level" >
            <br><br>
        </div>
        <br>
        <div>
            <span class="check-result1">危险特性：</span>
            <textarea  class="text-info" ng-show="items.type!='edit'" ng-model="ylb.td3.hazardousCharacteristics" ></textarea>
            <textarea  class="text-info" ng-show="items.type=='edit'" ng-model="ylb.accidents[items.index].hazardousCharacteristics" ></textarea>
            <br><br>
        </div>
        <br>
        <div>
            <span class="check-result1">泄露应急措施：</span>
            <textarea  class="text-info" ng-show="items.type!='edit'" ng-model="ylb.td3.emergencyMeasure" ></textarea>
            <textarea  class="text-info" ng-show="items.type=='edit'" ng-model="ylb.accidents[items.index].emergencyMeasure" ></textarea>
            <br><br>
        </div>
        <br>
        <div class="operate" >
            <button class="searchBtn" ng-click="items.type=='edit'?editYlb(3):postYlb(3)">保存</button>
            <div class="clearfix"></div>
        </div>
    </div>

    <div class="task-alert">
        <div class="alert-title">操作提示</div>
        <div class="alert-content">{{textContent}}</div>
        <ul class="alert-button">
            <li ng-click="sureAlert()" ng-if="textContent=='确定提交吗?'">确定</li>
            <li ng-click="resetAlert(textContent)">{{textContent=='确定提交吗?'?'取消':'关闭'}}</li>
        </ul>
    </div>
</div>
