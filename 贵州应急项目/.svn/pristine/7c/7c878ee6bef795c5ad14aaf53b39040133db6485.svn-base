<div  ng-controller="yilanbiao">
    <div class="tab-task">
        <div class="tab-nav">
            <button class="tab-button tab-left" ui-sref="msgManage.companyIntro" ui-sref-active="active">
                公司概况
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hgsjt" ui-sref-active="active">
                宏观数据图
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjfxys" ui-sref-active="active">
                环境风险要素
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjfxwz" ui-sref-active="active">
                环境风险物质
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjfxdy" ui-sref-active="active">
                环境风险单元
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjfxfkss" ui-sref-active="active">
                环境风险防控设施
            </button>
<!--            <button class="tab-button tab-left" ui-sref="msgManage.sczzq" ui-sref-active="active">-->
<!--                生产装置区-->
<!--            </button>-->
            <button class="tab-button tab-left" ui-sref="msgManage.scgy" ui-sref-active="active">
                生产工艺
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjbhmb" ui-sref-active="active">
                环境风险受体
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.hjwrsgy" ui-sref-active="active" >
                环境污染事故源
            </button>
            <button class="tab-button tab-left" ui-sref="msgManage.tfhjsjqjfx" ui-sref-active="active" >
                突发环境事件情景分析
            </button>
            <div class="tab-button tab-left">
                <span>应急物资及人员联络方式</span>
                <i class="iconfont icon-webicon215"></i>
                <div>
                    <button class="tab-button" ui-sref="msgManage.yjwz" ui-sref-active="active" style="width:185px;">
                        应急物资
                    </button>
                    <button class="tab-button" ui-sref="msgManage.yjzhtxl" ui-sref-active="active" style="width:185px;">
                        应急指挥通讯录
                    </button>
                    <button class="tab-button" ui-sref="msgManage.yjwbllb" ui-sref-active="active" style="width:185px;">
                        应急外部联络表
                    </button>
                    <button class="tab-button" ui-sref="msgManage.yjzj" ui-sref-active="active" style="width:185px;">
                        应急专家
                    </button>
                </div>
            </div>
        </div>
    </div>
    <br/>
    <br/>

    <div class="table-content">
        <div class="search-nav">
            <span>类型：</span>
            <input type="radio" ng-model="ylb.scgygylx" value="" class="regular-radio" id="radio1" ng-change="getYlb()"/>
            <label for="radio1" class="hander"></label>
            <span style="margin-right: 10px">全部 </span>
            <input type="radio" ng-model="ylb.scgygylx" value="1" class="regular-radio" id="radio3" ng-change="getYlb()"/>
            <label for="radio3" class="hander"></label>
            <span style="margin-right: 10px">常见工艺 </span>
            <input type="radio" ng-model="ylb.scgygylx" value="2" class="regular-radio" id="radio4" ng-change="getYlb()"/>
            <label for="radio4" class="hander"></label>
            <span style="margin-right: 10px">其他高温或高压、涉及易燃易爆等物质的工艺过程</span>
            <input type="radio" ng-model="ylb.scgygylx" value="3" class="regular-radio" id="radio5" ng-change="getYlb()"/>
            <label for="radio5" class="hander"></label>
            <span style="margin-right: 10px">具有国家规定限期淘汰的工艺名录和设备</span>
            <input type="radio" ng-model="ylb.scgygylx" value="4" class="regular-radio" id="radio6" ng-change="getYlb()"/>
            <label for="radio6" class="hander"></label>
            <span style="margin-right: 10px">其他</span>
            <button class="searchBtn" style="margin-left: 20px" ui-sref="msgManage.addscgy">
                <i class="iconfont icon-tianjia"></i> 新增
            </button>
            <a type="submit" class="searchBtn" style="margin-left: 10px;" ng-href="riskSourceTwo/downModel">
                <i class="iconfont icon-daochu"></i> 导入模板下载
            </a>
            <button class="searchBtn" style="margin-left: 20px"  ng-click="openFileEntry(8)">
                <i class="iconfont "></i> Excel导入
            </button>
        </div>
        <table style="margin-top: 16px;">
            <thead>
            <tr>
                <th>序号</th>
                <th ng-repeat="i in ylb.scgyth">{{i}}</th>
                <th>操作</th>
            </tr>
            </thead>
            <tbody>
            <tr ng-repeat="item in ylb.scgyLists">
                <td >{{items.scgypageSize*(items.scgypageNo-1)+$index+1}}</td>
                <td >{{item.gylx==1?'常见工艺': item.gylx==2?'其他高温或高压、涉及易燃易爆等物质的工艺过程': item.gylx==3?'具有国家规定限期淘汰的工艺名录和设备': item.gylx==4?'其他': ''}}</td>
                <td >{{item.gyName}}</td>
                <td>
                    <span class="oper hander" ui-sref="msgManage.addscgy({opType:'edit',gylx:item.gylx,gyName:item.gyName,id:item.productionProcess_Id})">修改</span>
                    <span class="oper hander" ng-click="deltr(item,11)">删除</span>
                </td>
            </tr>
            </tbody>
        </table>
        <p class="dangerColor noDate"  ng-if="ylb.scgyLists==0">无数据</p>
        <uib-pagination
                ng-change="getYlb()"
                total-items="items.scgytotalCount"
                ng-model="items.scgypageNo"
                items-per-page="items.scgypageSize"
                first-text="first"
                class="pagination"
                boundary-link-numbers="true"
                force-ellipses="true"
                direction-links="false"
                max-size= "5"
                rotate="true">
        </uib-pagination>
        <div class="clearfix"></div>
    </div>
    <div class="task-alert">
        <div class="alert-title">操作提示</div>
        <div class="alert-content">{{textContent}}</div>
        <ul class="alert-button">
            <li ng-click="sureAlert()" ng-if="textContent=='确定提交吗?'">确定</li>
            <li ng-click="resetAlert(textContent)">{{textContent=='确定提交吗?'?'取消':'关闭'}}</li>
        </ul>
    </div>
</div>
