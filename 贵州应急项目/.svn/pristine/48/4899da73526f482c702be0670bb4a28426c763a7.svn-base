<section class="table-content" cgs-slim options="{size:'6px',height:'calc(100% - 10px)'}">
  <div class="item-title">基本信息</div>
  <div class="item-content">
    <ul class="entDetail">
      <li>
        <span>企业名称：{{ entDetail.COMPANYNAME }}</span>
      </li>
      <li>
        <span>备案状态*：</span>
        <span ng-if="entDetail.RECORDSTATUS==''">未备案</span>
        <span ng-if="entDetail.RECORDSTATUS==1">已备案</span>
        <span ng-if="entDetail.RECORDSTATUS==2">即将到期</span>
        <span ng-if="entDetail.RECORDSTATUS==3">备案超期</span>
      </li>
      <li>
        <span>备案时间：</span>
        <span class="qie">{{ entDetail.RECORDTIME | date:'yyyy-MM-dd' }}</span>
        <span style="margin-left: 20px">预案管理经办人：</span>
        <span ng-if="entDetail.UNDERSIGNED" style="margin-right:20px">{{ entDetail.UNDERSIGNED }}</span>
        <span style="margin-left: 20px" style="margin-left:20px">联系方式：</span>
        <span ng-if="entDetail.UNDERSIGNED" >{{ entDetail.UNDERSIGNED }}</span>
      </li>
      <li>
        <span>风险级别：</span>
        <span>{{entDetail.RISKGRADE}}风险源</span>
      </li>
    </ul>
  </div>
  <table class="entDetailTable">
    <thead>
      <tr>
        <th>附件名称</th>
        <th>附件类型</th>
        <th>文件大小</th>
        <th>上传日期</th>
        <th>操作</th>
      </tr>
    </thead>
    <tbody>
      <tr ng-repeat="entList in entLists">
        <td> {{ entList.URL }} </td>
        <td> {{ entList.TYPE==1?'应急综合预案': entList.TYPE==2?'应急专项预案': entList.TYPE==3?'应急现场处置预案': entList.TYPE==4?'应急预案备案表': entList.TYPE==5?'应急预案编制说明':
          entList.TYPE==6?'环境风险评估报告': entList.TYPE==7?'环境应急资源调查报告': entList.TYPE==8?'环境应急预案评审意见': entList.TYPE==9?'其他':''}} </td>
        <td> {{ (entList.SIZE/1024/1024).toFixed(2)}}Mb </td>
        <td> {{ entList.TIME | date: 'yyyy-MM-dd' }} </td>
        <td>
          <a ng-href="preplan/downPlanAttachment?attachmentId={{entList.ID}}">
            <span class="oper">下载</span>
          </a>
        </td>
      </tr>
    </tbody>
  </table>
  <div ng-if="!noData" style="width: 100%;text-align: center;">
    <p style="color: rgb(255, 0, 0); margin-top: 15px;font-weight: 700;font-size: 15px">无附件数据！</p>
  </div>
  <uib-pagination ng-change="getManageentDetail()" total-items="page.totalCount" items-per-page="page.pageSize" ng-model="page.currentPage"
    class="pagination" boundary-link-numbers="true" direction-links="false" rotate="false" max-size="3" first-text="首页" last-text="末页">
  </uib-pagination>
  <div class="clearfix"></div>
</section>
