package com.sucsoft.gzhbyjwz.util;



import sun.misc.BASE64Decoder;
import sun.misc.BASE64Encoder;

import java.io.*;
import java.util.Base64;

public class Base64Utils {

    private static String key = "guizhouyingji";
    /**
     * 解码
     * @param str
     * @return
     * @throws Exception
     */
    public static String decoder(String str) throws Exception {
        Base64.Decoder decoder = Base64.getDecoder();
        String result = new String(decoder.decode(str), "UTF-8");
        result.replace(key,"");
        return result;
    }

    /**
     * 加密
     * @param str
     * @return
     * @throws Exception
     */
    public static String encoder(String str) throws Exception {
        str = key+str+key;
        Base64.Encoder encoder = Base64.getEncoder();
        byte[] textByte = str.getBytes("UTF-8");
        return encoder.encodeToString(textByte);
    }
}
