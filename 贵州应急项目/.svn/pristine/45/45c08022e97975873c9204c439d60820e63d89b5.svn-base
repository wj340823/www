                </div>
                <div class="paramDeatail2">
                    <div>
                        <span>泄漏物</span>
                        <!--<select style="width:90px" ng-model="waterPlayer.config.pollutant">
                            <option></option>
                            <option>甲苯</option>
                            <option>液氨</option>
                            <option>磷酸</option>
                        </select>-->
                        <input type="text" style="width:90px;" ng-model="waterPlayer.config.pollutant">
                    </div>
                    <div>
                        <span>泄漏量</span>
                        <input style="width:90px;" type="number" ng-model="waterPlayer.config.amount" /> 吨
                    </div>
                    <div>
                        <span>河流名称</span>
                        <select style="width:90px" ng-options="item.name for item in modal.rivers" ng-model="waterPlayer.config.river"></select>
                    </div>
                    <div>
                        <span>平均流速</span>
                        <input style="width:90px;" type="number" ng-model="waterPlayer.config.speed" /> m/s
                </div>
                    <!--<div>
                        <span>浓度差</span>
                        <select style="width:90px" ng-options="item.value as item.name for item in modal.levels" ng-model="waterPlayer.config.levels"></select>
                    </div>-->
                    <!--<div>
                        <span>影响范围</span>
                        <input type="text" ng-model="waterPlayer.config.harmRange">
                    </div>-->
                    <div>
                        <span>经度</span>
                        <input style="width:90px;" ng-model="waterPlayer.config.lg" type="number" /> 度
                    </div>
                    <div>
                        <span>纬度</span>
                        <input style="width:90px;" ng-model="waterPlayer.config.lt" type="number" /> 度
                    </div>   
                </div>
            </div>
            <div class="layFooter">
                <button class="btn-start" style="float: left;margin-top: 2px" ng-click="locateWryStart()">定位</button>
                <button class="btn-start" ng-click="modal.startSimulate()">开始分析</button>
            </div>
            <div class="loadLay" ng-if="waterModel.calculating"></div>
        </div>

        <!-- 曲线图 -->
        <div class="chartShow" style="top:145px" ng-show="waterPlayer.infoBoard.show" mydraggable>
            <div class="layHead">
                <span>污染团浓度峰值变化趋势</span>
            </div>
            <div class="layMain">
                <div cgs-echarts options="waterPlayer.echarts" style="width:482px;height:260px;"></div>
            </div>
        </div>
        <!-- 计算中 -->
        <div class="calcOuter" ng-show="waterPlayer.loading">
            <img src="images/loading.gif" />
            <span>&nbsp;建 模 中……</span>
        </div>

        <!-- 时间轴 -->
        <div class="timeAxis" style="left:212px" ng-show="waterPlayer.timeLineShow">
            <a ng-click="waterPlayer.playPause()">
                <i class="fa" ng-class="{true:'fa-pause',false:'fa-play'}[waterPlayer.playing]"></i>
            </a>
            <div>
                <i class="fa fa-chevron-left " ng-click="waterPlayer.prev()"></i>
                <ul class="monthSel">
                    <li ng-repeat="time in waterPlayer.times track by $index" ng-class="{'selected':time.processed,'active':time.selected}" ng-click="waterPlayer.toggle($index)">
                        <div class="linePoint">
                            <div></div>
                            <a></a>
                        </div>
                        <div ng-if="$index%2==0">
                            <span ng-bind="time.name"></span>
                        </div>
                    </li>
                </ul>
                <i class="fa fa-chevron-right " ng-click="waterPlayer.next()"></i>
            </div>
        </div>

    </div>
    <div ng-if="waterModel.tab==2" style="width:100%;height:100%;">
        <div ng-include="'partials/risk/waterSand.html'" style="width:100%;height:100%;"></div>
